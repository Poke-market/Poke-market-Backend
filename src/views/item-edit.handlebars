{{#section "styles"}}
  <link rel="stylesheet" href="/css/item-form.css" />
{{/section}}

{{#section "scripts"}}
  <script type="module" src="/js/item-edit.js"></script>
{{/section}}

<div class="item-form-container">
  <div class="form-header">
    <h1>Edit Item: {{itemDetails.name}}</h1>
    <div id="notification-area" class="notification" aria-live="polite"></div>
  </div>

  <form id="item-edit-form" method="POST" data-item-id="{{itemDetails._id}}">
    <div class="edit-section item-details">
      <h2>Item Details</h2>
      
      <div class="form-row">
        <div class="form-group">
          <label for="name" class="form-label">Item Name:</label>
          <input type="text" id="name" name="name" required class="form-input" value="{{itemDetails.name}}" />
          <div id="name-error" class="error-message" aria-live="polite"></div>
        </div>
        
        <div class="form-group">
          <label for="category" class="form-label">Category:</label>
          <select id="category" name="category" required class="form-input">
            {{#each categories}}
              <option value="{{this}}" {{#if (eq this ../itemDetails.category)}}selected{{/if}}>{{this}}</option>
            {{/each}}
          </select>
          <div id="category-error" class="error-message" aria-live="polite"></div>
        </div>
      </div>
      
      <div class="form-row">
        <div class="form-group full-width">
          <label for="description" class="form-label">Description:</label>
          <textarea id="description" name="description" required class="form-input" rows="3">{{itemDetails.description}}</textarea>
          <div id="description-error" class="error-message" aria-live="polite"></div>
        </div>
      </div>
      
      <div class="form-row">
        <div class="form-group">
          <label for="price" class="form-label">Price (Â¥):</label>
          <input type="text" id="price" name="price" required class="form-input" placeholder="0.00" value="{{itemDetails.price}}" />
          <div id="price-error" class="error-message" aria-live="polite"></div>
        </div>
        
        <div class="form-group toggle-group">
          <label for="isNewItem" class="form-label">Mark as New:</label>
          <div class="toggle-switch">
            <input type="checkbox" id="isNewItem" name="isNewItem" class="toggle-input" {{#if itemDetails.isNewItem}}checked{{/if}} />
            <label for="isNewItem" class="toggle-label"></label>
            <span class="toggle-status">{{#if itemDetails.isNewItem}}Enabled{{else}}Disabled{{/if}}</span>
          </div>
          <div class="status-description">
            <p>Items marked as new will appear with a "New" badge.</p>
          </div>
        </div>
      </div>
    </div>
    
    <div class="edit-section item-media">
      <h2>Item Image</h2>
      
      <div class="form-row">
        <div class="form-group">
          <label for="photoUrl" class="form-label">Image URL:</label>
          <input type="url" id="photoUrl" name="photoUrl" required class="form-input" value="{{itemDetails.photoUrl}}" />
          <div id="photoUrl-error" class="error-message" aria-live="polite"></div>
        </div>
      </div>
      
      <div class="form-row">
        <div class="image-preview-container">
          <div id="image-preview" class="image-preview"></div>
          <p class="helper-text">Image preview will be shown here</p>
        </div>
      </div>
    </div>
    
    <div class="edit-section item-pricing">
      <h2>Discount Information</h2>
      
      <div class="form-row">
        <div class="form-group">
          <label for="discount-amount" class="form-label">Discount Amount:</label>
          <input type="text" id="discount-amount" name="discount-amount" class="form-input" placeholder="0" value="{{itemDetails.discount.amount}}" />
          <div id="discount-amount-error" class="error-message" aria-live="polite"></div>
        </div>
        
        <div class="form-group">
          <label for="discount-type" class="form-label">Discount Type:</label>
          <select id="discount-type" name="discount-type" class="form-input">
            {{#each discountTypes}}
              <option value="{{this}}" {{#if (eq this ../itemDetails.discount.type)}}selected{{/if}}>{{this}}</option>
            {{/each}}
          </select>
          <div id="discount-type-error" class="error-message" aria-live="polite"></div>
        </div>
      </div>
      
      <div class="form-row">
        <div id="discount-preview" class="discount-preview"></div>
      </div>
    </div>
    
    <div class="edit-section item-tags">
      <h2>Tags</h2>
      
      <div class="form-row">
        <div class="form-group full-width">
          <label class="form-label">Select Tags:</label>
          <div id="available-tags" class="available-tags-container">
            {{#each tags}}
              <div class="available-tag {{#if (includes ../itemDetails.tags this)}}selected{{/if}}" data-tag="{{this}}">
                {{this}}
              </div>
            {{/each}}
          </div>
          <div class="helper-text">Click tags to select or deselect them</div>
          <div id="tags-error" class="error-message" aria-live="polite"></div>
        </div>
      </div>
    </div>
    
    <div class="form-actions">
      <button type="button" id="delete-item-btn" class="delete-btn">Delete Item</button>
      <div class="right-actions">
        <button type="button" id="cancel-btn" class="cancel-btn">Cancel</button>
        <button type="submit" id="save-btn" class="save-btn">Save Changes</button>
      </div>
    </div>
  </form>
  
  <!-- Confirmation Modal -->
  <div id="confirmation-modal" class="modal">
    <div class="modal-content">
      <span class="close-modal">&times;</span>
      <h2 id="modal-title">Confirm Action</h2>
      <p id="modal-message">Are you sure you want to proceed?</p>
      <div class="modal-actions">
        <button id="modal-cancel" class="modal-cancel-btn">Cancel</button>
        <button id="modal-confirm" class="modal-confirm-btn">Confirm</button>
      </div>
    </div>
  </div>
</div> 