{{#section "styles"}}
  <link rel="stylesheet" href="/css/home.css" />
{{/section}}

<div class="dashboard-container">
  <div class="dashboard-header">
    <h1>Poke-Mart Admin Dashboard</h1>
    <p class="welcome-text">Welcome {{#if user}}{{user.firstname}}{{else}}Admin{{/if}}</p>
  </div>

  <div class="dashboard-grid">
    <!-- Content Management Section -->
    <div class="grid-section">
      <h2 class="section-title">Content Management</h2>
      <div class="tile-group">
        <a href="/items" class="tile">
          <div class="tile-icon">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <rect x="2" y="5" width="20" height="14" rx="2" />
              <line x1="2" y1="10" x2="22" y2="10" />
            </svg>
          </div>
          <h3>Items Overview</h3>
          <p>Manage your product catalog</p>
        </a>
        <a href="/items/add" class="tile">
          <div class="tile-icon">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <rect x="2" y="5" width="20" height="14" rx="2" />
              <line x1="12" y1="9" x2="12" y2="15" />
              <line x1="9" y1="12" x2="15" y2="12" />
            </svg>
          </div>
          <h3>Add Item</h3>
          <p>Create new products</p>
        </a>
      </div>
    </div>

    <!-- User Management Section -->
    <div class="grid-section">
      <h2 class="section-title">User Management</h2>
      <div class="tile-group">
        <a href="/users" class="tile">
          <div class="tile-icon">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
              <circle cx="9" cy="7" r="4"></circle>
              <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
              <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
            </svg>
          </div>
          <h3>Users Overview</h3>
          <p>Manage user accounts</p>
        </a>
        <a href="/users/add" class="tile">
          <div class="tile-icon">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M16 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
              <circle cx="9" cy="7" r="4"></circle>
              <path d="M20 8v6"></path>
              <path d="M23 11h-6"></path>
            </svg>
          </div>
          <h3>Add User</h3>
          <p>Create new user accounts</p>
        </a>
      </div>
    </div>

    <!-- Account Section -->
    <div class="grid-section">
      <h2 class="section-title">Account</h2>
      <div class="tile-group">
        <a href="/logout" class="tile">
          <div class="tile-icon">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"></path>
              <polyline points="16 17 21 12 16 7"></polyline>
              <line x1="21" y1="12" x2="9" y2="12"></line>
            </svg>
          </div>
          <h3>Logout</h3>
          <p>End your session</p>
        </a>
      </div>
    </div>

    <!-- Developer Resources Section -->
    <div class="grid-section">
      <h2 class="section-title">Developer Resources</h2>
      <div class="tile-group">
        <a href="#" class="tile disabled">
          <div class="tile-icon">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
              <polyline points="14 2 14 8 20 8"></polyline>
              <line x1="16" y1="13" x2="8" y2="13"></line>
              <line x1="16" y1="17" x2="8" y2="17"></line>
              <polyline points="10 9 9 9 8 9"></polyline>
            </svg>
          </div>
          <h3>API Documentation</h3>
          <p>Coming soon</p>
          <span class="soon-badge">Soon</span>
        </a>
      </div>
    </div>

    <!-- Frontend Links Section -->
    <div class="grid-section">
      <h2 class="section-title">Frontend</h2>
      <div class="tile-group">
        <a href="{{frontendLiveUrl}}" target="_blank" class="tile">
          <div class="tile-icon">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path>
              <polyline points="15 3 21 3 21 9"></polyline>
              <line x1="10" y1="14" x2="21" y2="3"></line>
            </svg>
          </div>
          <h3>Live Frontend</h3>
          <p>View production webshop</p>
          <span class="external-link-badge">External</span>
        </a>
        <a href="{{frontendDevUrl}}" target="_blank" class="tile">
          <div class="tile-icon">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path>
              <circle cx="16" cy="6" r="3"></circle>
              <line x1="10" y1="14" x2="18" y2="14"></line>
            </svg>
          </div>
          <h3>Development Frontend</h3>
          <p>Local development server</p>
          <span class="dev-badge">Local</span>
        </a>
      </div>
    </div>

    <!-- GitHub Links Section -->
    <div class="grid-section">
      <h2 class="section-title">GitHub Repositories</h2>
      <div class="tile-group">
        <a href="{{backendRepoUrl}}" target="_blank" class="tile">
          <div class="tile-icon">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22"></path>
            </svg>
          </div>
          <h3>Backend Repository</h3>
          <p>View backend source code</p>
          <span class="github-badge">GitHub</span>
        </a>
        <a href="{{frontendRepoUrl}}" target="_blank" class="tile">
          <div class="tile-icon">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22"></path>
            </svg>
          </div>
          <h3>Frontend Repository</h3>
          <p>View frontend source code</p>
          <span class="github-badge">GitHub</span>
        </a>
      </div>
    </div>
  </div>
</div>

{{#section "scripts"}}
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      // Add entry animation to tiles
      const tiles = document.querySelectorAll('.tile');
      tiles.forEach((tile, index) => {
        setTimeout(() => {
          tile.classList.add('show');
        }, 100 * index);
      });
    });
  </script>
{{/section}} 